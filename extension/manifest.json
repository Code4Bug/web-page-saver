{
  "manifest_version": 3,
  "name": "Web Page Saver",
  "version": "1.0",
  "description": "Automated web page data scraping tool",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Activate Web Page Saver",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "devtools_page": "devtools.html",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}