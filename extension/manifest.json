{
  "manifest_version": 3,
  "name": "Web Page Saver",
  "version": "1.0",
  "description": "Automated web page data scraping tool",
  "permissions": [
    "activeTab",
    "devtools"
  ],
  "host_permissions": [
    "http://127.0.0.1:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Activate Web Page Saver"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "devtools_page": "devtools.html"
}